\encoding unicode

-- Display timing info
\timing

-- Display nulls as ∅ to distinguish from an empty string
\pset null ∅

-- Print vertically when horizontal is too wide
\x auto

\set HISTCONTROL ignoredups
\set HISTSIZE 1000

-- host:database> select 1
-- -... ;
-- \set PROMPT1 '%[%033[1;31m%]%n%[%033[0m%]@%m (%/)%R%# '
\set PROMPT1 '%n%@%m (%/)%R%# '
\set PROMPT2 '[more] %R > '

\set HISTFILE ~/.psql_history_ :DBNAME

\set COMP_KEYWORD_CASE upper
